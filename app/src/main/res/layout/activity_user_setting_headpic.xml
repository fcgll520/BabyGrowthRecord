<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_userSetHeadPic_gen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/toolBar_userSetting_headPic"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:onClick="backOnClick"
            android:layout_margin="@dimen/actionBarImgMargin"
            android:src="@drawable/users_back"
            android:layout_width="@dimen/actionBarImgSize"
            android:layout_height="@dimen/actionBarImgSize" />
        <TextView
            android:text="更改头像"
            android:textColor="@color/userBarBigText"
            android:textSize="@dimen/actionBarTextSize"
            android:layout_marginTop="@dimen/actionBarTextMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_userSetHeadPic_save"
            android:text="保存"
            android:textColor="@color/userBarSmallText"
            android:textSize="@dimen/actionBarSmallText"
            android:layout_marginTop="@dimen/actionBarImgMargin"
            android:layout_marginRight="@dimen/actionBarImgMargin"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">
        <ImageView
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4"
            android:id="@+id/iv_userSetHeadPic"
            android:src="@drawable/user_default_child"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Gallery
            android:layout_gravity="bottom"
            android:id="@+id/gal_userSetHeadPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>