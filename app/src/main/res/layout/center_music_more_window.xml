<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#90FFFFFF"
    android:gravity="center|center_horizontal" >

    <TextView

        android:id="@+id/more_window_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:drawableTop="@drawable/composer_thought"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp"
        android:text="文字" />

    <TextView
        android:id="@+id/more_window_beijing"
        android:layout_width="40dp"
        android:layout_height="130dp"
        android:background="#00000000"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_local"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp"
        android:text="  "/>

    <TextView
        android:id="@+id/more_window_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/more_window_beijing"
        android:clickable="true"
        android:drawableTop="@drawable/composer_camera"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="相册"/>


    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_beijing"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/more_window_local"
        android:src="@drawable/composer_icn_plus" />
